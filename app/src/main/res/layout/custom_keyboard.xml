<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="13"
            android:textColor="@color/white"
            android:background="@drawable/selector_custom_keyboard"
            android:gravity="center"
            android:text="7"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="13"
            android:textColor="@color/white"
            android:background="@drawable/selector_custom_keyboard"
            android:gravity="center"
            android:text="8"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="13"
            android:textColor="@color/white"
            android:background="@drawable/selector_custom_keyboard"
            android:gravity="center"
            android:text="9"
            android:textSize="25sp" />

        <RelativeLayout
            android:id="@+id/delete_rl"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="13"
            android:background="@drawable/selector_custom_keyboard">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/delete" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_custom_keyboard"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_custom_keyboard"
            android:gravity="center"
            android:textColor="@color/white"

            android:text="5"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tv6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selector_custom_keyboard"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/point_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/selector_custom_keyboard"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="·"
            android:textSize="30dp"
            />
    </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_custom_keyboard"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_custom_keyboard"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="2"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_custom_keyboard"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="3"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/tv0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_custom_keyboard"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ok_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="23"
                android:background="@drawable/selector_button_custom_keyboard"
                android:gravity="center"
                android:text="找零计算"

                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>



</LinearLayout>