<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemVipRechargeBinding">

        <import type="ys.app.pad.utils.AppUtil" />

        <variable
            name="itemViewModel"
            type="ys.app.pad.viewmodel.ItemVipRechargeViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:layout_margin="@dimen/dp_5"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal"
            android:layout_centerVertical="true"
            android:text="@{AppUtil.getTimes(itemViewModel.model.payDate)}"
            android:textSize="@dimen/sp_7"
            tools:text="2017-08-12 00:00:00" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值成功"
            android:textSize="@dimen/sp_7"
            android:textColor="@color/text_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            tools:text="交易成功" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@color/devide">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_11"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_item_vip_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weixinzhifu"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@{AppUtil.getPayType(itemViewModel.model.payWay)}"
                android:textSize="@dimen/sp_9"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/iv_item_vip_type"
                tools:text="微信支付" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@{@string/rmb+AppUtil.formatStandardMoney(itemViewModel.model.rechargeAmt)}"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_12"
                tools:text="2.1" />

        </RelativeLayout>
        <!--<View-->
            <!--android:id="@+id/view_vip"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="5dp"-->
            <!--android:layout_marginTop="@dimen/dp_5"-->
            <!--android:background="@color/input_grey"/>-->
    </LinearLayout>
</layout>