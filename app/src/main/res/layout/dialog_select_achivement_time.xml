<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_165"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"
        android:background="@drawable/shape_select_title_bg"
        android:gravity="center"
        android:text="选择时间范围"
        android:textSize="@dimen/sp_6_5"
        android:textColor="@android:color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/shape_login_input"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="horizontal">


            <TextView
                style="@style/TCdarkTS13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/shengchanriqi"
                android:drawablePadding="@dimen/dp_2.5"
                android:padding="@dimen/dp_2.5"
                android:text="开始时间: " />


            <TextView
                android:id="@+id/tv_dialog_rangeTime_start"
                style="@style/TCdarkTS13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLines="1"
                android:hint="请选择开始时间"
                android:maxLength="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/shape_login_input"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="horizontal">


            <TextView
                style="@style/TCdarkTS13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/shengchanriqi"
                android:drawablePadding="@dimen/dp_2.5"
                android:padding="@dimen/dp_2.5"
                android:text="结束时间: " />


            <TextView
                android:id="@+id/tv_dialog_rangeTime_end"
                style="@style/TCdarkTS13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLines="1"
                android:hint="请选择结束时间"
                android:maxLength="10" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_dialog_rangeTime_query"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/selector_blue_btn_bg"
            android:textSize="@dimen/text_button_size"
            android:textColor="@android:color/white"
            android:text="查询" />
    </LinearLayout>


</LinearLayout>