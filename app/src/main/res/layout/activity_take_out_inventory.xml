<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ActivityTakeOutInventoryBinding">

        <import type="ys.app.pad.utils.AppUtil" />
        <import type="android.view.View"></import>

        <variable
            name="viewModel"
            type="ys.app.pad.viewmodel.TakeOutInventoryViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white" />

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tool_bar"
            android:layout_marginBottom="35dp">

            <LinearLayout
                android:id="@+id/ll0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:visibility="gone"
                    android:src="@mipmap/shangpinmingcheng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mResult.name}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll0"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:visibility="gone"
                    android:src="@mipmap/lansesaomiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条形码"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mResult.barCode}"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:visibility="gone"
                    android:src="@mipmap/kucunshuliang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存数量" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(viewModel.mResult.stockNum)}" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll2"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:visibility="gone"
                    android:src="@mipmap/jinjia" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进价" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_money"
                    android:text='@{AppUtil.formatStandardMoney(viewModel.mResult.costAmt)+@string/yuan}' />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/ll3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/chukushuliang_m" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="出库数量" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <EditText
                    style="@style/TCdarkTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="@integer/num_limit"
                    android:maxLines="1"
                    android:hint="请输入出库数量"
                    android:text="@={viewModel.obTackOutNum}"
                    app:onTextChangedListener="@{viewModel.textChangeListener}" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/type_rl"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/ll4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_input"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/chukuyuanyin"
                    android:layout_alignBottom="@+id/textView12"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                   />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv"
                    android:text="出库原因" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv"
                    android:text=": " />

                <ImageView
                    android:id="@+id/select_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/arrow_down" />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/select_iv"
                    android:layout_toRightOf="@+id/tv2"
                    android:background="@null"
                    android:hint="请选择出库原因"
                    android:onClick="@{viewModel.clickSelectButton}"
                    android:text="@={viewModel.obBackReason}"
                    android:id="@+id/textView12" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_chuku_selectShot"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/type_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:visibility="@{viewModel.allotVisible?View.VISIBLE:View.GONE}"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/huiyuanxingming" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="调拨店铺:" />


                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:onClick="@{()->viewModel.selectAllotShop()}"
                    android:text="@{viewModel.shopName}"
                    android:hint="请选择店铺"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_chuku_selectEmployee"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ll_chuku_selectShot"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:visibility="@{viewModel.allotVisible?View.VISIBLE:View.GONE}"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/iv_tv_padding"
                android:src="@mipmap/huiyuanxingming" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="调出人 : " />


            <TextView
                android:id="@+id/textView16"
                style="@style/TCdarkTS13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择调出人"
                android:onClick="@{()->viewModel.selectOutEmployee()}"
                android:text="@{viewModel.employeeName}"></TextView>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_press_and_enable_button_color"
                android:textColor="@color/text_white"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll_chuku_selectEmployee"
                android:layout_margin="10dp"
                android:enabled="@{viewModel.obButtonEnable}"
                android:onClick="@{viewModel.clickButton}"
                android:text="出库" />

        </RelativeLayout>


    </RelativeLayout>
</layout>